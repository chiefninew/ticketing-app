{
  "name": "ticketing-app",
  "version": "1.0.0",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "customize": "yarn expo-electron customize",
    "desktop": "yarn expo-electron start",
    "mac": "yarn electron-webpack && yarn electron-builder --mac",
    "win": "yarn electron-webpack && yarn electron-builder --win",
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "test": "jest --watch --coverage=false --changedSince=origin/master",
    "testDebug": "jest -o --watch --coverage=false",
    "testFinal": "jest",
    "updateSnapshots": "jest -u --coverage=false"
  },
  "keywords": [],
  "author": {
    "name": "Nino Paul Cervantes",
    "email": "chiefninew.moonshot@gmail.com"
  },
  "build": {
    "productName": "Ticketing App",
    "appId": "ticketing.app",
    "copyright": "Â© Project Moonshot 2022",
    "directories": {
      "output": "dist"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Ticketing App"
    },
    "win": {
      "requestedExecutionLevel": "requireAdministrator",
      "artifactName": "${productName} Setup ${version} ${arch}.${ext}",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "identity": null,
      "compression": "store",
      "target": [
        {
          "target": "dmg"
        }
      ]
    },
    "linux": {},
    "extraMetadata": {
      "main": "main.js"
    },
    "files": [
      {
        "from": "dist/main/",
        "to": "./",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "dist/renderer",
        "to": "./",
        "filter": [
          "**/*"
        ]
      },
      "package.json",
      "**/node_modules/**/*"
    ]
  },
  "jest": {
    "preset": "jest-expo",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/coverage/**",
      "!**/node_modules/**",
      "!**/babel.config.js",
      "!**/jest.setup.js"
    ]
  },
  "dependencies": {
    "@expo/electron-adapter": "~0.0.55",
    "@expo/vector-icons": "^13.0.0",
    "@expo/webpack-config": "^0.17.0",
    "@kichiyaki/react-native-barcode-generator": "^0.6.7",
    "@react-native-async-storage/async-storage": "^1.17.10",
    "expo": "~46.0.13",
    "expo-status-bar": "~1.4.0",
    "jest": "^26.6.3",
    "jest-expo": "^46.0.1",
    "react": "18.0.0",
    "react-dom": "18.0.0",
    "react-native": "0.69.6",
    "react-native-pager-view": "5.4.24",
    "react-native-qrcode-svg": "^6.1.2",
    "react-native-svg": "12.3.0",
    "react-native-tab-view": "^3.2.1",
    "react-native-web": "~0.18.7",
    "react-redux": "^8.0.4",
    "react-router-native": "^6.4.2",
    "redux": "^4.2.0",
    "redux-persist": "^6.0.0",
    "redux-thunk": "^2.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "detox": "^19.12.5",
    "electron": "20.0.0",
    "electron-builder": "^23.6.0",
    "react-test-renderer": "^18.2.0",
    "reactotron-react-native": "^5.0.3"
  },
  "private": true
}
